<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<title>
			{% block title %}
				Pet Finder
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='%233B82F6'><circle cx='11' cy='4' r='2'/><circle cx='18' cy='8' r='2'/><circle cx='20' cy='16' r='2'/><path d='M9 10a5 5 0 0 1 5 5v3.5a3.5 3.5 0 0 1-6.84 1.045Q6.52 17.48 4.46 16.84A3.5 3.5 0 0 1 5.5 10Z'/></svg>">

		{# Font Awesome #}
		<link
		rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

		{# Leaflet #}
		<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>
		<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% include 'components/NavBar.html.twig' %}
		{% include 'components/PublishModal.html.twig' %}
		{% include 'components/LocationSearchModal.html.twig' %}
		{% include 'components/LocationSearchCreateModal.html.twig' %}
		{% include 'components/FlashMessages.html.twig' %}
		{% block body %}{% endblock %}
		{% include 'components/Footer.html.twig' %}

		{# Load utility scripts first #}
		<script src="{{ asset('page/base/menu_navigation.js') }}"></script>
		<script src="{{ asset('page/base/utils.js') }}"></script>
		<script src="{{ asset('page/base/publish_modal.js') }}"></script>
		<script src="{{ asset('page/base/location_search_modal.js') }}"></script>
		<script src="{{ asset('page/base/location_search_create_modal.js') }}"></script>

		{# Custom JavaScript #}
		<script src="{{ asset('js/alpine.js') }}"></script>

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			{{ encore_entry_script_tags('confirm-modal') }}
		{% endblock %}
	</body>
</html>
