{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.shelters.title'|trans }} - Pet Finder
{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-8 pb-4 border-b-2 border-gray-200">
            <h1 class="text-3xl font-bold text-gray-800">{{ 'admin.shelters.title'|trans }}</h1>
            <a href="{{ path('app_admin') }}" class="text-blue-600 hover:text-blue-800 font-medium">
                <i class="fas fa-arrow-left mr-2"></i>{{ 'admin.back_to_panel'|trans }}
            </a>
        </div>

        <!-- Filtros -->
        <div class="mb-8">
            <div class="flex flex-wrap gap-2">
                <a href="{{ path('app_admin_shelters', {'filter': 'all'}) }}"
                   class="px-4 py-2 rounded-lg font-medium transition-colors duration-200
                          {% if currentFilter == 'all' %}
                              bg-blue-600 text-white
                          {% else %}
                              bg-gray-200 text-gray-700 hover:bg-gray-300
                          {% endif %}">
                    <i class="fas fa-list mr-2"></i>{{ 'admin.shelters.filters.all'|trans }}
                </a>
                <a href="{{ path('app_admin_shelters', {'filter': 'pending'}) }}"
                   class="px-4 py-2 rounded-lg font-medium transition-colors duration-200
                          {% if currentFilter == 'pending' %}
                              bg-yellow-600 text-white
                          {% else %}
                              bg-gray-200 text-gray-700 hover:bg-gray-300
                          {% endif %}">
                    <i class="fas fa-clock mr-2"></i>{{ 'admin.shelters.filters.pending'|trans }}
                </a>
                <a href="{{ path('app_admin_shelters', {'filter': 'verified'}) }}"
                   class="px-4 py-2 rounded-lg font-medium transition-colors duration-200
                          {% if currentFilter == 'verified' %}
                              bg-green-600 text-white
                          {% else %}
                              bg-gray-200 text-gray-700 hover:bg-gray-300
                          {% endif %}">
                    <i class="fas fa-check-circle mr-2"></i>{{ 'admin.shelters.filters.verified'|trans }}
                </a>
                <a href="{{ path('app_admin_shelters', {'filter': 'rejected'}) }}"
                   class="px-4 py-2 rounded-lg font-medium transition-colors duration-200
                          {% if currentFilter == 'rejected' %}
                              bg-red-600 text-white
                          {% else %}
                              bg-gray-200 text-gray-700 hover:bg-gray-300
                          {% endif %}">
                    <i class="fas fa-times-circle mr-2"></i>{{ 'admin.shelters.filters.rejected'|trans }}
                </a>
            </div>
        </div>

        {% if shelters is empty %}
            <div class="text-center py-12">
                <h3 class="text-xl font-semibold text-gray-700 mb-4">
                    {% if currentFilter == 'all' %}
                        {{ 'admin.shelters.no_shelters.all'|trans }}
                    {% elseif currentFilter == 'pending' %}
                        {{ 'admin.shelters.no_shelters.pending'|trans }}
                    {% elseif currentFilter == 'verified' %}
                        {{ 'admin.shelters.no_shelters.verified'|trans }}
                    {% elseif currentFilter == 'rejected' %}
                        {{ 'admin.shelters.no_shelters.rejected'|trans }}
                    {% endif %}
                </h3>
                <p class="text-gray-600">
                    {% if currentFilter == 'all' %}
                        {{ 'admin.shelters.no_shelters.desc_all'|trans }}
                    {% else %}
                        {{ 'admin.shelters.no_shelters.desc_filtered'|trans }}
                    {% endif %}
                </p>
            </div>
        {% else %}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {% for shelter in shelters %}
                    <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 p-6">
                        <div class="flex justify-between items-start mb-4">
                            <h3 class="text-xl font-semibold text-gray-800">
                                {{ shelter.shelterName ?: shelter.firstName ~ ' ' ~ shelter.lastName }}
                            </h3>
                            <span class="px-3 py-1 rounded-full text-xs font-medium uppercase
                                {% if shelter.shelterVerificationStatus == 'pending' %}
                                    bg-yellow-100 text-yellow-800
                                {% elseif shelter.shelterVerificationStatus == 'verified' %}
                                    bg-green-100 text-green-800
                                {% else %}
                                    bg-red-100 text-red-800
                                {% endif %}">
                                {{ shelter.shelterVerificationStatus|upper }}
                            </span>
                        </div>

                        <div class="space-y-2 mb-4">
                            <div class="flex">
                                <span class="font-medium text-gray-600 min-w-[100px]">{{ 'admin.shelters.shelter_info.contact'|trans }}</span>
                                <span class="text-gray-800">{{ shelter.firstName }} {{ shelter.lastName }}</span>
                            </div>
                            <div class="flex">
                                <span class="font-medium text-gray-600 min-w-[100px]">{{ 'admin.shelters.shelter_info.email'|trans }}</span>
                                <span class="text-gray-800">{{ shelter.email }}</span>
                            </div>
                            {% if shelter.phone %}
                                <div class="flex">
                                    <span class="font-medium text-gray-600 min-w-[100px]">{{ 'admin.shelters.shelter_info.phone'|trans }}</span>
                                    <span class="text-gray-800">{{ shelter.phone }}</span>
                                </div>
                            {% endif %}
                            {% if shelter.shelterPhone %}
                                <div class="flex">
                                    <span class="font-medium text-gray-600 min-w-[100px]">{{ 'admin.shelters.shelter_info.shelter_phone'|trans }}</span>
                                    <span class="text-gray-800">{{ shelter.shelterPhone }}</span>
                                </div>
                            {% endif %}
                            {% if shelter.shelterAddress %}
                                <div class="flex">
                                    <span class="font-medium text-gray-600 min-w-[100px]">{{ 'admin.shelters.shelter_info.address'|trans }}</span>
                                    <span class="text-gray-800">{{ shelter.shelterAddress }}</span>
                                </div>
                            {% endif %}
                            <div class="flex">
                                <span class="font-medium text-gray-600 min-w-[100px]">{{ 'admin.shelters.shelter_info.registered'|trans }}</span>
                                <span class="text-gray-800">{{ shelter.createdAt|date('d/m/Y') }}</span>
                            </div>
                        </div>

                        {% if shelter.shelterDescription %}
                            <div class="text-gray-600 italic mb-4 leading-relaxed">
                                "{{ shelter.shelterDescription }}"
                            </div>
                        {% endif %}

                        <div class="flex gap-2 flex-wrap">
                            {% if shelter.shelterVerificationStatus == 'pending' %}
                                <!-- Botones para shelters pendientes -->
                                <form method="POST" action="{{ path('app_admin_shelter_approve', {'id': shelter.id}) }}" class="inline approve-shelter-form" data-shelter-name="{{ shelter.shelterName|default('esta shelter') }}">
                                    <button type="submit"
                                            class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors duration-200 text-sm font-medium">
                                        <i class="fas fa-check mr-2"></i>{{ 'admin.shelters.actions.approve'|trans }}
                                    </button>
                                </form>
                                <form method="POST" action="{{ path('app_admin_shelter_reject', {'id': shelter.id}) }}" class="inline reject-shelter-form" data-shelter-name="{{ shelter.shelterName|default('esta shelter') }}">
                                    <button type="submit"
                                            class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors duration-200 text-sm font-medium">
                                        <i class="fas fa-times mr-2"></i>{{ 'admin.shelters.actions.reject'|trans }}
                                    </button>
                                </form>
                            {% else %}
                                <!-- Dropdown para cambiar estado de shelters verificadas/rechazadas -->
                                <div class="relative inline-block text-left">
                                    <form method="POST" action="{{ path('app_admin_shelter_change_status', {'id': shelter.id}) }}" class="inline">
                                        <select name="new_status"
                                                class="px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 transition-colors duration-200 text-sm font-medium border-0 focus:ring-2 focus:ring-gray-500 focus:outline-none"
                                                onchange="this.form.submit()">
                                            <option value="">{{ 'admin.shelters.actions.change_status'|trans }}</option>
                                            {% if shelter.shelterVerificationStatus != 'pending' %}
                                                <option value="pending">{{ 'admin.shelters.actions.change_status_options.pending'|trans }}</option>
                                            {% endif %}
                                            {% if shelter.shelterVerificationStatus != 'VERIFIED' %}
                                                <option value="VERIFIED">{{ 'admin.shelters.actions.change_status_options.verified'|trans }}</option>
                                            {% endif %}
                                            {% if shelter.shelterVerificationStatus != 'rejected' %}
                                                <option value="rejected">{{ 'admin.shelters.actions.change_status_options.rejected'|trans }}</option>
                                            {% endif %}
                                        </select>
                                    </form>
                                </div>
                            {% endif %}

                            <a href="mailto:{{ shelter.email }}" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors duration-200 text-sm font-medium">
                                <i class="fas fa-envelope mr-2"></i>{{ 'admin.shelters.actions.contact'|trans }}
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <script>
        // Verificar si ya está inicializado para evitar redeclaraciones
        if (typeof window.confirmModalInitialized === 'undefined') {
            window.confirmModalInitialized = true;

            // Event listeners para formularios
            document.addEventListener('DOMContentLoaded', function() {
                // Formularios de aprobar shelter
                document.querySelectorAll('.approve-shelter-form').forEach(form => {
                    form.addEventListener('submit', async function(e) {
                        e.preventDefault();
                        const shelterName = this.dataset.shelterName;
                        const confirmed = await confirmApproveShelter(shelterName);
                        if (confirmed) {
                            this.submit();
                        }
                    });
                });

                // Formularios de rechazar shelter
                document.querySelectorAll('.reject-shelter-form').forEach(form => {
                    form.addEventListener('submit', async function(e) {
                        e.preventDefault();
                        const shelterName = this.dataset.shelterName;
                        const confirmed = await confirmRejectShelter(shelterName);
                        if (confirmed) {
                            this.submit();
                        }
                    });
                });
            });

            async function confirmApproveShelter(shelterName) {
                return await window.ConfirmModalHandler.confirm({
                    title: '{{ 'admin.shelters.confirmations.approve_title'|trans }}',
                    message: '{{ 'admin.shelters.confirmations.approve_message'|trans }}'.replace('{shelter_name}', shelterName),
                    confirmText: '{{ 'admin.shelters.actions.approve'|trans }}',
                    cancelText: '{{ 'common.cancel'|trans }}'
                });
            }

            async function confirmRejectShelter(shelterName) {
                return await window.ConfirmModalHandler.confirm({
                    title: '{{ 'admin.shelters.confirmations.reject_title'|trans }}',
                    message: '{{ 'admin.shelters.confirmations.reject_message'|trans }}'.replace('{shelter_name}', shelterName),
                    confirmText: '{{ 'admin.shelters.actions.reject'|trans }}',
                    cancelText: '{{ 'common.cancel'|trans }}'
                });
            }
        }
    </script>
{% endblock %}
