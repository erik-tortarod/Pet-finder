{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.users.title'|trans }} - Pet Finder{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-8 pb-4 border-b-2 border-gray-200">
            <h1 class="text-3xl font-bold text-gray-800">{{ 'admin.users.title'|trans }}</h1>
            <a href="{{ path('app_admin') }}" class="text-blue-600 hover:text-blue-800 font-medium">
                <i class="fas fa-arrow-left mr-2"></i>{{ 'admin.back_to_panel'|trans }}
            </a>
        </div>

        <!-- Filtros y BÃºsqueda -->
        <div class="mb-8 space-y-4">
            <!-- Filtros -->
            <div class="flex flex-wrap gap-2">
                <a href="{{ path('app_admin_users', {'filter': 'all', 'search': search}) }}"
                   class="px-4 py-2 rounded-lg font-medium transition-colors duration-200
                          {% if currentFilter == 'all' %}
                              bg-blue-600 text-white
                          {% else %}
                              bg-gray-200 text-gray-700 hover:bg-gray-300
                          {% endif %}">
                    <i class="fas fa-list mr-2"></i>{{ 'admin.users.filters.all'|trans }}
                </a>
                <a href="{{ path('app_admin_users', {'filter': 'admin', 'search': search}) }}"
                   class="px-4 py-2 rounded-lg font-medium transition-colors duration-200
                          {% if currentFilter == 'admin' %}
                              bg-purple-600 text-white
                          {% else %}
                              bg-gray-200 text-gray-700 hover:bg-gray-300
                          {% endif %}">
                    <i class="fas fa-user-shield mr-2"></i>{{ 'admin.users.filters.admins'|trans }}
                </a>
                <a href="{{ path('app_admin_users', {'filter': 'shelter', 'search': search}) }}"
                   class="px-4 py-2 rounded-lg font-medium transition-colors duration-200
                          {% if currentFilter == 'shelter' %}
                              bg-yellow-600 text-white
                          {% else %}
                              bg-gray-200 text-gray-700 hover:bg-gray-300
                          {% endif %}">
                    <i class="fas fa-home mr-2"></i>{{ 'admin.users.filters.shelters'|trans }}
                </a>
                <a href="{{ path('app_admin_users', {'filter': 'regular', 'search': search}) }}"
                   class="px-4 py-2 rounded-lg font-medium transition-colors duration-200
                          {% if currentFilter == 'regular' %}
                              bg-green-600 text-white
                          {% else %}
                              bg-gray-200 text-gray-700 hover:bg-gray-300
                          {% endif %}">
                    <i class="fas fa-user mr-2"></i>{{ 'admin.users.filters.regular_users'|trans }}
                </a>
            </div>

            <!-- BÃºsqueda -->
            <form method="GET" action="{{ path('app_admin_users') }}" class="flex gap-2">
                <input type="hidden" name="filter" value="{{ currentFilter }}">
                <input type="text"
                       name="search"
                       value="{{ search }}"
                       placeholder="{{ 'admin.users.search.placeholder'|trans }}"
                       class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200">
                    <i class="fas fa-search mr-2"></i>{{ 'admin.users.search.button'|trans }}
                </button>
                {% if search %}
                    <a href="{{ path('app_admin_users', {'filter': currentFilter}) }}"
                       class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition-colors duration-200">
                        <i class="fas fa-times mr-2"></i>{{ 'admin.users.search.clear'|trans }}
                    </a>
                {% endif %}
            </form>
        </div>

        {% if users is empty %}
            <div class="text-center py-12">
                <h3 class="text-xl font-semibold text-gray-700 mb-4">
                    {% if currentFilter == 'all' %}
                        {{ 'admin.users.no_users.all'|trans }}
                    {% elseif currentFilter == 'admin' %}
                        {{ 'admin.users.no_users.admins'|trans }}
                    {% elseif currentFilter == 'shelter' %}
                        {{ 'admin.users.no_users.shelters'|trans }}
                    {% elseif currentFilter == 'regular' %}
                        {{ 'admin.users.no_users.regular'|trans }}
                    {% endif %}
                </h3>
                <p class="text-gray-600">
                    {% if search %}
                        {{ 'admin.users.no_users.search_no_results'|trans }}
                    {% else %}
                        {{ 'admin.users.no_users.filter_no_results'|trans }}
                    {% endif %}
                </p>
            </div>
        {% else %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'admin.users.table.user'|trans }}
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'admin.users.table.email'|trans }}
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'admin.users.table.type'|trans }}
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'admin.users.table.status'|trans }}
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'admin.users.table.registered'|trans }}
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'admin.users.table.actions'|trans }}
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for user in users %}
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-10 w-10">
                                                <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
                                                    <span class="text-sm font-medium text-gray-700">
                                                        {{ user.firstName|first|upper }}{{ user.lastName|first|upper }}
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-medium text-gray-900">
                                                    {{ user.firstName }} {{ user.lastName }}
                                                </div>
                                                {% if user.shelterName %}
                                                    <div class="text-sm text-gray-500">
                                                        {{ user.shelterName }}
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        {{ user.email }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex flex-wrap gap-1">
                                            {% if 'ROLE_ADMIN' in user.roles %}
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                                    <i class="fas fa-user-shield mr-1"></i>{{ 'admin.users.user_types.admin'|trans }}
                                                </span>
                                            {% endif %}
                                            {% if user.isShelter %}
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                    <i class="fas fa-home mr-1"></i>{{ 'admin.users.user_types.shelter'|trans }}
                                                </span>
                                            {% endif %}
                                            {% if not 'ROLE_ADMIN' in user.roles and not user.isShelter %}
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                    <i class="fas fa-user mr-1"></i>{{ 'admin.users.user_types.user'|trans }}
                                                </span>
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% if user.isShelter %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                                {% if user.shelterVerificationStatus == 'pending' %}
                                                    bg-yellow-100 text-yellow-800
                                                {% elseif user.shelterVerificationStatus == 'verified' %}
                                                    bg-green-100 text-green-800
                                                {% else %}
                                                    bg-red-100 text-red-800
                                                {% endif %}">
                                                {{ user.shelterVerificationStatus|upper }}
                                            </span>
                                        {% else %}
                                            <span class="text-sm text-gray-500">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        {{ user.createdAt|date('d/m/Y') }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <div class="flex gap-2">
                                            {% if user.id != app.user.id %}
                                                <form method="POST" action="{{ path('app_admin_toggle_admin', {'id': user.id}) }}" class="inline toggle-admin-form" data-user-name="{{ user.firstName }} {{ user.lastName }}" data-is-admin="{{ 'ROLE_ADMIN' in user.roles ? 'true' : 'false' }}">
                                                    <button type="submit"
                                                            class="{% if 'ROLE_ADMIN' in user.roles %}bg-red-600 hover:bg-red-700{% else %}bg-purple-600 hover:bg-purple-700{% endif %} text-white px-3 py-1 rounded text-xs font-medium transition-colors duration-200">
                                                        {% if 'ROLE_ADMIN' in user.roles %}
                                                            <i class="fas fa-user-minus mr-1"></i>{{ 'admin.users.actions.remove_admin'|trans }}
                                                        {% else %}
                                                            <i class="fas fa-user-plus mr-1"></i>{{ 'admin.users.actions.make_admin'|trans }}
                                                        {% endif %}
                                                    </button>
                                                </form>
                                            {% else %}
                                                <span class="text-gray-400 text-xs">{{ 'admin.users.actions.your_account'|trans }}</span>
                                            {% endif %}
                                            <a href="mailto:{{ user.email }}" class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-xs font-medium transition-colors duration-200">
                                                <i class="fas fa-envelope mr-1"></i>{{ 'admin.users.actions.contact'|trans }}
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- InformaciÃ³n adicional -->
            <div class="mt-6 text-center text-sm text-gray-600">
                <p>{{ 'admin.users.total_users'|trans({'count': users|length}) }}</p>
            </div>
        {% endif %}
    </div>

    <script>
        // Verificar si ya estÃ¡ inicializado para evitar redeclaraciones
        if (typeof window.confirmModalInitialized === 'undefined') {
            window.confirmModalInitialized = true;

            // Event listeners para formularios
            document.addEventListener('DOMContentLoaded', function() {
                // Formularios de toggle admin
                document.querySelectorAll('.toggle-admin-form').forEach(form => {
                    form.addEventListener('submit', async function(e) {
                        e.preventDefault();
                        const userName = this.dataset.userName;
                        const isAdmin = this.dataset.isAdmin === 'true';
                        const confirmed = await confirmToggleAdmin(userName, isAdmin);
                        if (confirmed) {
                            this.submit();
                        }
                    });
                });
            });

            async function confirmToggleAdmin(userName, isAdmin) {
                const action = isAdmin ? '{{ 'admin.users.confirmations.remove_admin'|trans }}' : '{{ 'admin.users.confirmations.make_admin'|trans }}';
                const controller = await window.ConfirmModalHandler.confirm({
                    title: '{{ 'admin.users.confirmations.toggle_admin_title'|trans }}',
                    message: '{{ 'admin.users.confirmations.toggle_admin_message'|trans }}'.replace('{action}', action).replace('{user_name}', userName),
                    confirmText: isAdmin ? '{{ 'admin.users.actions.remove_admin'|trans }}' : '{{ 'admin.users.actions.make_admin'|trans }}',
                    cancelText: '{{ 'common.cancel'|trans }}'
                });
                return controller;
            }
        }
    </script>
{% endblock %}
