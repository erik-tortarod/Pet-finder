{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.title'|trans }} - Pet Finder
{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="text-center mb-12">
            <h1 class="text-5xl font-bold text-gray-800 mb-4">{{ 'admin.title'|trans }}</h1>
            <p class="text-xl text-gray-600">{{ 'admin.subtitle'|trans }}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            <!-- GestiÃ³n de Shelters -->
            <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 p-8 text-center">
                <div class="text-5xl text-blue-600 mb-4">
                    <i class="fas fa-home"></i>
                </div>
                <h2 class="text-2xl font-semibold text-gray-800 mb-4">{{ 'admin.dashboard.manage_shelters'|trans }}</h2>
                <p class="text-gray-600 mb-6 leading-relaxed">
                    {{ 'admin.dashboard.manage_shelters_desc'|trans }}
                </p>
                <a href="{{ path('app_admin_shelters') }}" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition-colors duration-200">
                    {{ 'admin.dashboard.view_shelters'|trans }}
                </a>
            </div>

            <!-- GestiÃ³n de Usuarios -->
            <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 p-8 text-center">
                <div class="text-5xl text-green-600 mb-4">
                    <i class="fas fa-users"></i>
                </div>
                <h2 class="text-2xl font-semibold text-gray-800 mb-4">{{ 'admin.dashboard.manage_users'|trans }}</h2>
                <p class="text-gray-600 mb-6 leading-relaxed">
                    {{ 'admin.dashboard.manage_users_desc'|trans }}
                </p>
                <a href="{{ path('app_admin_users') }}" class="inline-block px-6 py-3 bg-green-600 text-white rounded-lg font-medium hover:bg-green-700 transition-colors duration-200">
                    {{ 'admin.dashboard.view_users'|trans }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}
