{% extends 'base.html.twig' %}

{% block title %}Perfil de Usuario
{% endblock %}

{% block body %}

	{# Header #}
	<div class="bg-white shadow">
		<div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
			<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0">
				<div>
					<h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Mi Cuenta</h1>
					<p class="mt-2 text-sm sm:text-base text-gray-600">Gestiona tus publicaciones y configuración</p>
				</div>
				<div class="flex flex-col sm:flex-row items-start sm:items-center space-y-2 sm:space-y-0 sm:space-x-4">
					<span class="text-sm text-gray-500">Bienvenido,
						<strong>{{ user.firstName }}
							{{ user.lastName|default("") }}</strong>
					</span>
					<a
						href="{{ path('app_auth_logout') }}" class="btn btn-danger flex items-center space-x-2">
						{# Icon for logout #}
						{% include 'components/Icon.html.twig' with {name: 'log-out', size: 16, class: 'mr-2'} %}Cerrar Sesión
					</a>
				</div>
			</div>
		</div>
	</div>


	{# Main Content #}
	<div
		class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

		{# Tabs Navigation #}
		<section class="border-b border-gray-200 mb-8">
			<nav class="-mb-px flex flex-wrap sm:flex-nowrap space-x-2 sm:space-x-8 overflow-x-auto">
				<a href="" class="border-blue-500 text-blue-600 whitespace-nowrap py-2 px-2 sm:px-1 border-b-2 font-medium text-xs sm:text-sm flex-shrink-0 flex items-center">
					{% include 'components/Icon.html.twig' with {name: 'search', size: 16, class: 'mr-2'} %}
					<span class="hidden sm:inline">Mascotas Perdidas</span>
					<span class="sm:hidden">Perdidas</span>
				</a>
				<a href="" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-2 px-2 sm:px-1 border-b-2 font-medium text-xs sm:text-sm flex-shrink-0 flex items-center">
					{% include 'components/Icon.html.twig' with {name: 'heart', size: 16, class: 'mr-2'} %}
					<span class="hidden sm:inline">Animales Encontrados</span>
					<span class="sm:hidden">Encontrados</span>
				</a>
				<a href="" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-2 px-2 sm:px-1 border-b-2 font-medium text-xs sm:text-sm flex-shrink-0 flex items-center">
					{% include 'components/Icon.html.twig' with {name: 'settings', size: 16, class: 'mr-2'} %}
					<span class="hidden sm:inline">Configuración</span>
					<span class="sm:hidden">Config</span>
				</a>
			</nav>
		</section>

		{# Stats Secctions #}
		<section
			class="space-y-6">

			{# Stats Cards #}
			<div
				class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4 mb-8">

				{# Active Publications #}
				<article class="bg-white rounded-lg shadow p-4 sm:p-6">
					<div class="flex items-center">
						<div class="flex-shrink-0">
							{% include 'components/Icon.html.twig' with {name:'search',size:22,class:'mr-2 text-blue-600'} %}
						</div>
						<div class="ml-3 sm:ml-4">
							<div class="text-xl sm:text-2xl font-bold text-gray-900">{{ activeLostPetsCount }}</div>
							<div class="text-xs sm:text-sm text-gray-500">Publicaciones activas</div>
						</div>
					</div>
				</article>

				{# Found Animals #}
				<article class="bg-white rounded-lg shadow p-4 sm:p-6">
					<div class="flex items-center">
						<div class="flex-shrink-0">
							{% include 'components/Icon.html.twig' with {name:'search',size:22,class:'mr-2 text-blue-600'} %}
						</div>
						<div class="ml-3 sm:ml-4">
							<div class="text-xl sm:text-2xl font-bold text-gray-900">{{activeFoundAnimalsCount}}</div>
							<div class="text-xs sm:text-sm text-gray-500">Encontradas</div>
						</div>
					</div>
				</article>
			</div>

			{# Lost Animals Sections #}
			<section class="bg-white rounded-lg shadow">
				<div class="px-4 sm:px-6 py-4 border-b border-gray-200">
					<h3 class="text-base sm:text-lg font-medium text-gray-900">Mis Mascotas Perdidas</h3>
				</div>

				<div class="divide-y divide-gray-200">
					{% for item in lostPets %}
						<article class="p-4 sm:p-6">
							<div
								class="flex flex-col lg:flex-row lg:items-start lg:justify-between space-y-4 lg:space-y-0">
								{# Animal Data #}
								<div class="flex items-start space-x-3 sm:space-x-4">
									{% set primaryPhoto = null %}
									{% if item.animalId.animalPhotos is not empty %}
										{% for photo in item.animalId.animalPhotos %}
											{% if photo.isPrimary %}
												{% set primaryPhoto = photo %}
											{% endif %}
										{% endfor %}
									{% endif %}

									<img src="{% if primaryPhoto %}{{ path('app_image_animal', {'id': primaryPhoto.id}) }}{% else %}/path/to/default/image.jpg{% endif %}" alt="Foto de {{ item.animalId.name }}" class="w-12 h-12 sm:w-16 sm:h-16 rounded-lg object-cover flex-shrink-0">

									<div class="flex-1 min-w-0">
										<h4 class="text-base sm:text-lg font-semibold text-gray-900">{{ item.animalId.name }}</h4>
										<p class="text-xs sm:text-sm text-gray-600">
											{{ item.animalId.animalType }}
											{{ item.animalId.gender|default("") }}
											{{ item.animalId.age|default("") }}
										</p>
										<p class="text-xs sm:text-sm text-gray-500">
											Publicado
											{% set daysAgo = (date()|date('U') - item.createdAt|date('U')) / 86400 %}
											{% if daysAgo < 1 %}
												Hoy
											{% elseif daysAgo < 2 %}
												Ayer
											{% elseif daysAgo < 7 %}
												hace
												{{ daysAgo|round(0, 'floor') }}
												días
											{% else %}
												Hace
												{{ (daysAgo / 7)|round(0, 'floor') }}
												semanas
											{% endif %}
										</p>

										<div class="flex flex-wrap items-center mt-2 gap-2">
											<span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 uppercase">
												{% include 'components/Icon.html.twig' with {name: 'alert-triangle', size: 14, class: 'mr-1'} %}
												{{ item.animalId.status|capitalize }}
											</span>
										</div>
									</div>
								</div>

								{# Action Buttons #}
								<div class="flex flex-wrap gap-2 lg:flex-nowrap lg:items-center lg:space-x-2">
									<a class="flex items-center text-xs sm:text-sm rounded-md btn btn-primary">
										{% include 'components/Icon.html.twig' with {name: 'edit-2', size: 16, class: 'mr-1'} %}
										Editar
									</a>
									<a class="flex items-center text-xs sm:text-sm rounded-md btn btn-success">
										{% include 'components/Icon.html.twig' with {name: 'check-circle', size: 16, class: 'mr-1'} %}
										Encontrada
									</a>
									<a class="flex items-center text-xs sm:text-sm rounded-md btn btn-warning">
										{% include 'components/Icon.html.twig' with {name: 'archive', size: 16, class: 'mr-1'} %}
										Archivar
									</a>
									<a class="flex items-center text-xs sm:text-sm rounded-md btn btn-danger">
										{% include 'components/Icon.html.twig' with {name: 'trash-2', size: 16, class: 'mr-1'} %}
										Eliminar
									</a>
								</div>

							</div>
						</article>
					{% endfor %}
				</div>
			</section>

		</div>

	</section>
</section></div>{% endblock %}
