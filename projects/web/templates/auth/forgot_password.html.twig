{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.forgot_password.title'|trans }}{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('page/auth/forgot_password.css') }}">
{% endblock %}

{% block body %}

	<div class="auth-container">
		<div class="auth-header">
			<h1>{{ 'auth.forgot_password.title'|trans }}</h1>
			<p>{{ 'auth.forgot_password.subtitle'|trans }}</p>
		</div>

		<div class="info-box">
			<strong>{{ 'auth.forgot_password.how_it_works.title'|trans }}</strong><br>
			{{ 'auth.forgot_password.how_it_works.description'|trans }}
		</div>

		<form action="{{ path('app_auth_forgot_password') }}" method="post">
			<div class="form-group">
				<label for="email">{{ 'auth.forgot_password.email'|trans }}</label>
				<input type="email" name="email" id="email" placeholder="{{ 'auth.forgot_password.email_placeholder'|trans }}" required>
			</div>

			<button type="submit" class="btn">{{ 'auth.forgot_password.send_reset_link'|trans }}</button>
		</form>

		<div class="auth-footer">
			<p>{{ 'auth.forgot_password.remembered_password'|trans }}
				<a href="{{ path('app_auth_login') }}">{{ 'auth.forgot_password.login_link'|trans }}</a>
			</p>
			<p>{{ 'auth.forgot_password.no_account'|trans }}
				<a href="{{ path('app_auth_register') }}">{{ 'auth.forgot_password.register_link'|trans }}</a>
			</p>
		</div>
	</div>
{% endblock %}
