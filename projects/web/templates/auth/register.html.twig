{% extends 'base.html.twig' %}

{% block title %}
	{{ 'auth.register.title'|trans }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}

	<div class="max-w-lg mx-auto mt-8 p-8 bg-white rounded-lg shadow-lg">
		<div class="text-center mb-10">
			<h1 class="text-3xl font-bold text-gray-800 mb-3">{{ 'auth.register.title'|trans }}</h1>
			<p class="text-gray-600">{{ 'auth.register.subtitle'|trans }}</p>
		</div>

		<!-- Toggle Switch para tipo de registro -->
		<div class="mb-10">
			<div class="bg-gray-100 p-1 rounded-lg flex">
				<button type="button" id="user-toggle" class="flex-1 py-3 px-4 rounded-md font-medium transition-all duration-300 bg-white text-gray-700 shadow-sm border border-gray-200">
					<i class="fas fa-user mr-2"></i>
					{{ 'auth.register.toggle.regular_user'|trans }}
				</button>
				<button type="button" id="shelter-toggle" class="flex-1 py-3 px-4 rounded-md font-medium transition-all duration-300 text-gray-500 hover:text-gray-700">
					<i class="fas fa-home mr-2"></i>
					{{ 'auth.register.toggle.shelter'|trans }}
				</button>
			</div>
		</div>

		<div class="mb-10 text-center">
			{% for owner in hwi_oauth_resource_owners() %}
				<a href="{{ hwi_oauth_login_url(owner) }}" class="inline-block px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors duration-300 m-2">
					<i class="fab fa-google mr-2"></i>
					{{ 'auth.register.oauth_continue'|trans }}
					{{ owner | trans({}, 'HWIOAuthBundle') }}
				</a>
			{% endfor %}
		</div>

		<div class="relative my-8">
			<div class="absolute inset-0 flex items-center">
				<div class="w-full border-t border-gray-300"></div>
			</div>
			<div class="relative flex justify-center text-sm">
				<span class="px-2 bg-white text-gray-500">{{ 'auth.register.or_divider'|trans }}</span>
			</div>
		</div>

		<form action="{{ path('app_auth_register') }}" method="post">
			<input type="hidden" name="isShelter" id="isShelter" value="0">

			<div class="grid grid-cols-2 gap-6 mb-6">
				<div>
					<label for="firstName" class="block text-sm font-medium text-gray-700 mb-3">
						<i class="fas fa-user mr-1"></i>
						{{ 'auth.register.form.first_name'|trans }}
						<span class="text-red-500">*</span>
					</label>
					<input type="text" name="firstName" id="firstName" placeholder="{{ 'auth.register.form.first_name_placeholder'|trans }}" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
				</div>

				<div>
					<label for="lastName" class="block text-sm font-medium text-gray-700 mb-3">
						<i class="fas fa-user mr-1"></i>
						{{ 'auth.register.form.last_name'|trans }}
						<span class="text-red-500">*</span>
					</label>
					<input type="text" name="lastName" id="lastName" placeholder="{{ 'auth.register.form.last_name_placeholder'|trans }}" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
				</div>
			</div>

			<div class="mb-6">
				<label for="email" class="block text-sm font-medium text-gray-700 mb-3">
					<i class="fas fa-envelope mr-1"></i>
					{{ 'auth.register.form.email'|trans }}
					<span class="text-red-500">*</span>
				</label>
				<input type="email" name="email" id="email" placeholder="{{ 'auth.register.form.email_placeholder'|trans }}" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
			</div>

			<div class="mb-6" data-controller="phone-prefix">
				<label for="phone" class="block text-sm font-medium text-gray-700 mb-3">
					<i class="fas fa-phone mr-1"></i>
					{{ 'auth.register.form.phone'|trans }}
				</label>
				<div class="flex space-x-2">
					<div
						class="w-1/3 relative">
						<!-- Botón del dropdown -->
						<button type="button" data-phone-prefix-target="button" data-action="click->phone-prefix#toggleDropdown" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white text-left flex items-center justify-between">
							<span data-phone-prefix-target="display" class="text-gray-700 flex items-center">
								<span class="text-lg">🌍</span>
								<span class="text-gray-500 ml-1">+</span>
							</span>
							<i class="fas fa-chevron-down text-gray-400 transition-transform duration-200" data-phone-prefix-target="icon"></i>
						</button>

						<!-- Dropdown personalizado -->
						<div
							data-phone-prefix-target="dropdown" class="hidden absolute z-50 w-80 mt-1 bg-white border border-gray-300 rounded-lg shadow-xl max-h-96 overflow-hidden">

							<!-- Campo de búsqueda -->
							<div class="p-4 border-b border-gray-200 bg-gray-50">
								<input type="text" data-phone-prefix-target="search" data-action="input->phone-prefix#searchCountries" placeholder="Buscar país o prefijo..." class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm">
							</div>

							<!-- Lista de países -->
							<div data-phone-prefix-target="options" class="max-h-80 overflow-y-auto"></div>
						</div>

						<!-- Select oculto para el formulario -->
						<select data-phone-prefix-target="select" data-action="change->phone-prefix#selectCountry" class="hidden"></select>
					</div>
					<div class="w-2/3">
						<input type="tel" name="phone" id="phone" data-phone-prefix-target="input" data-action="input->phone-prefix#formatPhoneNumber" placeholder="{{ 'auth.register.form.phone_placeholder'|trans }}" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
					</div>
				</div>
			</div>

			<div class="grid grid-cols-2 gap-6 mb-6">
				<div>
					<label for="password" class="block text-sm font-medium text-gray-700 mb-3">
						<i class="fas fa-lock mr-1"></i>
						{{ 'auth.register.form.password'|trans }}
						<span class="text-red-500">*</span>
					</label>
					<input type="password" name="password" id="password" placeholder="{{ 'auth.register.form.password_placeholder'|trans }}" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
				</div>

				<div>
					<label for="confirm_password" class="block text-sm font-medium text-gray-700 mb-3">
						<i class="fas fa-lock mr-1"></i>
						{{ 'auth.register.form.confirm_password'|trans }}
						<span class="text-red-500">*</span>
					</label>
					<input type="password" name="confirm_password" id="confirm_password" placeholder="{{ 'auth.register.form.confirm_password_placeholder'|trans }}" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
				</div>
			</div>

			{# <div class="flex items-center mb-8">
																																																	<input type="checkbox" name="emailNotifications" id="emailNotifications" class="h-5 w-5 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
																																																	<label for="emailNotifications" class="ml-3 block text-sm text-gray-700">
																																																		<i class="fas fa-bell mr-1"></i>
																																																		{{ 'auth.register.form.email_notifications'|trans }}
																																																	</label>
																																																</div> #}

			<!-- Campos específicos de protectora -->
			<div id="shelter-fields" class="bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-lg p-8 mb-8" style="display: none;">
				<div class="flex items-center mb-6">
					<div class="flex-shrink-0">
						<div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
							<i class="fas fa-home text-white text-lg"></i>
						</div>
					</div>
					<div class="ml-4">
						<h3 class="text-xl font-semibold text-gray-800">{{ 'auth.register.shelter.title'|trans }}</h3>
						<p class="text-sm text-gray-600">{{ 'auth.register.shelter.subtitle'|trans }}</p>
					</div>
				</div>

				<div class="mb-6">
					<label for="shelterName" class="block text-sm font-medium text-gray-700 mb-3">
						<i class="fas fa-building mr-1"></i>
						<span class="text-red-500">*</span>
						{{ 'auth.register.shelter.name'|trans }}
					</label>
					<input type="text" name="shelterName" id="shelterName" placeholder="{{ 'auth.register.shelter.name_placeholder'|trans }}" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
				</div>

				<div class="mb-6">
					<label for="shelterDescription" class="block text-sm font-medium text-gray-700 mb-3">
						<i class="fas fa-info-circle mr-1"></i>
						{{ 'auth.register.shelter.description'|trans }}
					</label>
					<textarea name="shelterDescription" id="shelterDescription" placeholder="{{ 'auth.register.shelter.description_placeholder'|trans }}" rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-y min-h-24 transition-all duration-200"></textarea>
				</div>

				<div class="mb-6">
					<label for="shelterAddress" class="block text-sm font-medium text-gray-700 mb-3">
						<i class="fas fa-map-marker-alt mr-1"></i>
						<span class="text-red-500">*</span>
						{{ 'auth.register.shelter.address'|trans }}
					</label>
					<input type="text" name="shelterAddress" id="shelterAddress" placeholder="{{ 'auth.register.shelter.address_placeholder'|trans }}" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
					<div data-controller="phone-prefix">
						<label for="shelterPhone" class="block text-sm font-medium text-gray-700 mb-3">
							<i class="fas fa-phone mr-1"></i>
							{{ 'auth.register.shelter.phone'|trans }}
						</label>
						<div class="flex space-x-2">
							<div
								class="w-1/3 relative">
								<!-- Botón del dropdown -->
								<button type="button" data-phone-prefix-target="button" data-action="click->phone-prefix#toggleDropdown" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white text-left flex items-center justify-between">
									<span data-phone-prefix-target="display" class="text-gray-700 flex items-center">
										<span class="text-lg">🌍</span>
										<span class="text-gray-500 ml-1">+</span>
									</span>
									<i class="fas fa-chevron-down text-gray-400 transition-transform duration-200" data-phone-prefix-target="icon"></i>
								</button>

								<!-- Dropdown personalizado -->
								<div
									data-phone-prefix-target="dropdown" class="hidden absolute z-50 w-80 mt-1 bg-white border border-gray-300 rounded-lg shadow-xl max-h-96 overflow-hidden">

									<!-- Campo de búsqueda -->
									<div class="p-4 border-b border-gray-200 bg-gray-50">
										<input type="text" data-phone-prefix-target="search" data-action="input->phone-prefix#searchCountries" placeholder="Buscar país o prefijo..." class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm">
									</div>

									<!-- Lista de países -->
									<div data-phone-prefix-target="options" class="max-h-80 overflow-y-auto"></div>
								</div>

								<!-- Select oculto para el formulario -->
								<select data-phone-prefix-target="select" data-action="change->phone-prefix#selectCountry" class="hidden"></select>
							</div>
							<div class="w-2/3">
								<input type="tel" name="shelterPhone" id="shelterPhone" data-phone-prefix-target="input" data-action="input->phone-prefix#formatPhoneNumber" placeholder="{{ 'auth.register.shelter.phone_placeholder'|trans }}" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
							</div>
						</div>
					</div>
					<div>
						<label for="shelterWebsite" class="block text-sm font-medium text-gray-700 mb-3">
							<i class="fas fa-globe mr-1"></i>
							{{ 'auth.register.shelter.website'|trans }}
						</label>
						<input type="url" name="shelterWebsite" id="shelterWebsite" placeholder="{{ 'auth.register.shelter.website_placeholder'|trans }}" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
					</div>
				</div>

				<div class="mb-6">
					<label for="shelterFacebook" class="block text-sm font-medium text-gray-700 mb-3">
						<i class="fab fa-facebook mr-1"></i>
						{{ 'auth.register.shelter.facebook'|trans }}
					</label>
					<input type="url" name="shelterFacebook" id="shelterFacebook" placeholder="{{ 'auth.register.shelter.facebook_placeholder'|trans }}" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
				</div>
			</div>

			<button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white py-4 px-6 rounded-lg hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-300 font-medium shadow-lg text-lg">
				<i class="fas fa-user-plus mr-2"></i>
				{{ 'auth.register.form.create_account'|trans }}
			</button>
		</form>

		<div class="text-center mt-8 pt-8 border-t border-gray-200">
			<p class="text-gray-600">
				{{ 'auth.register.footer.has_account'|trans }}
				<a href="{{ path('app_auth_login') }}" class="text-blue-600 hover:text-blue-800 hover:underline">
					<i class="fas fa-sign-in-alt mr-1"></i>
					{{ 'auth.register.footer.login_link'|trans }}
				</a>
			</p>
		</div>
	</div>

	<script>
		// Toggle switch functionality
const userToggle = document.getElementById('user-toggle');
const shelterToggle = document.getElementById('shelter-toggle');
const isShelterInput = document.getElementById('isShelter');
const shelterFields = document.getElementById('shelter-fields');
const requiredFields = ['shelterName', 'shelterAddress'];

function setActiveToggle(isShelter) {
if (isShelter) { // Activate shelter toggle
shelterToggle.className = 'flex-1 py-3 px-4 rounded-md font-medium transition-all duration-300 bg-white text-gray-700 shadow-sm border border-gray-200';
userToggle.className = 'flex-1 py-3 px-4 rounded-md font-medium transition-all duration-300 text-gray-500 hover:text-gray-700';
isShelterInput.value = '1';

// Show shelter fields
shelterFields.style.display = 'block';
requiredFields.forEach(fieldId => {
const field = document.getElementById(fieldId);
if (field) 
field.required = true;



});
} else { // Activate user toggle
userToggle.className = 'flex-1 py-3 px-4 rounded-md font-medium transition-all duration-300 bg-white text-gray-700 shadow-sm border border-gray-200';
shelterToggle.className = 'flex-1 py-3 px-4 rounded-md font-medium transition-all duration-300 text-gray-500 hover:text-gray-700';
isShelterInput.value = '0';

// Hide shelter fields
shelterFields.style.display = 'none';
requiredFields.forEach(fieldId => {
const field = document.getElementById(fieldId);
if (field) 
field.required = false;



});
}
}

// Event listeners
userToggle.addEventListener('click', () => setActiveToggle(false));
shelterToggle.addEventListener('click', () => setActiveToggle(true));

// Initialize with user toggle active
setActiveToggle(false);

// Phone prefix handling
document.addEventListener('DOMContentLoaded', function () {
const form = document.querySelector('form');
if (form) {
form.addEventListener('submit', function (e) { // Get all phone prefix controllers
const phoneControllers = document.querySelectorAll('[data-controller="phone-prefix"]');

phoneControllers.forEach(controller => { // Get the Stimulus controller instance
const controllerInstance = window.Stimulus.getControllerForElementAndIdentifier(controller, 'phone-prefix');

if (controllerInstance && controllerInstance.selectedPrefixValue) {
const input = controller.querySelector('[data-phone-prefix-target="input"]');

if (input && input.value) { // Combine prefix with phone number
const fullPhone = `${
controllerInstance.selectedPrefixValue
} ${
input.value
}`;
console.log('Combining phone:', controllerInstance.selectedPrefixValue, '+', input.value, '=', fullPhone);
input.value = fullPhone;
}
} else { // Alternative approach: get prefix from the display element
const displayElement = controller.querySelector('[data-phone-prefix-target="display"]');
const input = controller.querySelector('[data-phone-prefix-target="input"]');

if (displayElement && input && input.value) { // Extract prefix from the display (it shows "🇪🇸 +34")
const displayText = displayElement.textContent || displayElement.innerText;
const prefixMatch = displayText.match(/\+[\d-]+/);

if (prefixMatch && prefixMatch[0] !== '+') {
const fullPhone = `${
prefixMatch[0]
} ${
input.value
}`;
console.log('Alternative combining phone:', prefixMatch[0], '+', input.value, '=', fullPhone);
input.value = fullPhone;
}
}
}
});
});
}
});
	</script>
{% endblock %}
