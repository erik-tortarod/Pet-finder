{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.reset_password.title'|trans }}{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('page/auth/reset_password.css') }}">
{% endblock %}

{% block body %}

	<div class="auth-container">
		<div class="auth-header">
			<h1>{{ 'auth.reset_password.title'|trans }}</h1>
			<p>{{ 'auth.reset_password.subtitle'|trans }}</p>
		</div>

		<div class="info-box">
			<strong>{{ 'auth.reset_password.valid_link.title'|trans }}</strong><br>
			{{ 'auth.reset_password.valid_link.description'|trans }}
		</div>

		<div class="password-requirements">
			<h4>{{ 'auth.reset_password.requirements.title'|trans }}</h4>
			<ul>
				<li>{{ 'auth.reset_password.requirements.min_length'|trans }}</li>
				<li>{{ 'auth.reset_password.requirements.recommended'|trans }}</li>
				<li>{{ 'auth.reset_password.requirements.personal_info'|trans }}</li>
			</ul>
		</div>

		<form action="{{ path('app_auth_reset_password', {'token': token}) }}" method="post">
			<div class="form-group">
				<label for="password">{{ 'auth.reset_password.new_password'|trans }}</label>
				<input type="password" name="password" id="password" placeholder="{{ 'auth.reset_password.new_password_placeholder'|trans }}" required>
			</div>

			<div class="form-group">
				<label for="confirm_password">{{ 'auth.reset_password.confirm_password'|trans }}</label>
				<input type="password" name="confirm_password" id="confirm_password" placeholder="{{ 'auth.reset_password.confirm_password_placeholder'|trans }}" required>
			</div>

			<button type="submit" class="btn">{{ 'auth.reset_password.reset_button'|trans }}</button>
		</form>

		<div class="auth-footer">
			<p>{{ 'auth.reset_password.remembered_password'|trans }}
				<a href="{{ path('app_auth_login') }}">{{ 'auth.reset_password.login_link'|trans }}</a>
			</p>
		</div>
	</div>
{% endblock %}
