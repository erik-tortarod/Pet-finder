<!-- Publish Modal -->
<div id="publish-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50" style="background-color: rgba(75, 85, 99, 0.5) !important;">
	<div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
		<div class="mt-3 text-center">
			<div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-blue-100 mb-4">
				{% include 'components/Icon.html.twig' with {name: 'plus', size: 24, class: 'text-blue-600'} %}
			</div>
			<h3 class="text-lg font-medium text-gray-900 mb-4">{{ 'publish_modal.title'|trans }}</h3>

			<div class="space-y-3">
				<a href="{{ path('app_lost_pets_create') }}" class="w-full flex items-center justify-center px-4 py-3 bg-red-100 hover:bg-red-200 text-red-700 rounded-lg transition-colors duration-200">
					{% include 'components/Icon.html.twig' with {name: 'search', size: 20, class: 'mr-3'} %}
					<span class="font-medium">{{ 'publish_modal.lost_pet'|trans }}</span>
				</a>

				<a href="{{ path('app_found_pets_create') }}" class="w-full flex items-center justify-center px-4 py-3 bg-green-100 hover:bg-green-200 text-green-700 rounded-lg transition-colors duration-200">
					{% include 'components/Icon.html.twig' with {name: 'heart', size: 20, class: 'mr-3'} %}
					<span class="font-medium">{{ 'publish_modal.found_pet'|trans }}</span>
				</a>
			</div>

			<div class="mt-6">
				<button id="close-publish-modal" class="w-full px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-700 rounded-lg transition-colors duration-200">
					{{ 'publish_modal.cancel'|trans }}
				</button>
			</div>
		</div>
	</div>
</div>
