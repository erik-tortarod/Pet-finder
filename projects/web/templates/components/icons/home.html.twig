{# Home Icon Component
   Parámetros disponibles:
   - size: tamaño del icono (default: 24)
   - class: clases CSS adicionales (default: '')
   - color: color del stroke (default: 'currentColor')
#}

{% set size = size|default(24) %}
{% set class = class|default('') %}
{% set color = color|default('currentColor') %}

<svg xmlns="http://www.w3.org/2000/svg"
     width="{{ size }}"
     height="{{ size }}"
     viewBox="0 0 24 24"
     fill="none"
     stroke="{{ color }}"
     stroke-width="2"
     stroke-linecap="round"
     stroke-linejoin="round"
     class="lucide lucide-home {{ class }}">
    <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
    <polyline points="9,22 9,12 15,12 15,22"/>
</svg>
