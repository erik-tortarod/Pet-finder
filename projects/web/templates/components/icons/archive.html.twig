{% set class = class|default('') %}
{% set color = color|default('currentColor') %}

<svg xmlns="http://www.w3.org/2000/svg"
     width="{{ size }}"
     height="{{ size }}"
     viewBox="0 0 24 24"
     fill="none"
     stroke="{{ color }}"
     stroke-width="2"
     stroke-linecap="round"
     stroke-linejoin="round"
     class="lucide lucide-archive {{ class }}">
