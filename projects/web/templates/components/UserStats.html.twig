{# User Stats Component
   Uso: {% include 'components/UserStats.html.twig' with {stats: stats} %}

   Par√°metros:
   - stats: array con totalLostPets, totalFoundAnimals, totalPublications
#}

{% set stats = stats|default({}) %}

<section class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
            <div class="p-2 bg-blue-100 rounded-lg">
                {% include 'components/Icon.html.twig' with {name: 'search', size: 24, class: 'text-blue-600'} %}
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Mascotas Perdidas</p>
                <p class="text-2xl font-bold text-gray-900">{{ stats.totalLostPets|default(0) }}</p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
            <div class="p-2 bg-green-100 rounded-lg">
                {% include 'components/Icon.html.twig' with {name: 'heart', size: 24, class: 'text-green-600'} %}
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Animales Avistados</p>
                <p class="text-2xl font-bold text-gray-900">{{ stats.totalFoundAnimals|default(0) }}</p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
            <div class="p-2 bg-purple-100 rounded-lg">
                {% include 'components/Icon.html.twig' with {name: 'list', size: 24, class: 'text-purple-600'} %}
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Total Publicaciones</p>
                <p class="text-2xl font-bold text-gray-900">{{ stats.totalPublications|default(0) }}</p>
            </div>
        </div>
    </div>
</section>
